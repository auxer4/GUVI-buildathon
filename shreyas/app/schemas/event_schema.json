{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "System Event Schema",
  "type": "object",
  "required": [
    "event_id",
    "event",
    "conversation_id",
    "timestamp"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "description": "Unique identifier for the event"
    },
    "event": {
      "type": "string",
      "description": "Event type identifier"
    },
    "conversation_id": {
      "type": "string",
      "description": "Conversation/session identifier"
    },
    "text": {
      "type": "string",
      "description": "Message content (if applicable)"
    },
    "metadata": {
      "type": "object",
      "description": "Optional contextual metadata"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "UTC timestamp"
    }
  },
  "additionalProperties": false
}
