{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Scam Intelligence Report Schema",
  "type": "object",
  "required": [
    "report_id",
    "case_id",
    "generated_at",
    "audience",
    "scam_type",
    "confidence",
    "entities",
    "timeline"
  ],
  "properties": {
    "report_id": {
      "type": "string"
    },
    "case_id": {
      "type": "string"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "audience": {
      "type": "string",
      "enum": [
        "LAW_ENFORCEMENT",
        "BANK",
        "INTERNAL"
      ]
    },
    "scam_type": {
      "type": "string"
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "entities": {
      "type": "array",
      "items": {
        "$ref": "intel_schema.json"
      }
    },
    "timeline": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "timestamp",
          "type",
          "description"
        ],
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "type": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
