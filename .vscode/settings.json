{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.rulers": [88, 120]
  },
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/Scripts/python.exe",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--max-line-length=120", "--extend-ignore=E203,W503"],
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["shreyas/tests", "rishi/tests"],
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.extraPaths": ["${workspaceFolder}"],
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.formatOnSave": true
  },
  "yaml.schemas": {
    "file://${workspaceFolder}/rishi/config/thresholds.yaml": "/config/**/*.yaml"
  },
  "editor.trimAutoWhitespace": true,
  "editor.trimFinalNewlines": true,
  "editor.insertFinalNewline": true,
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.*": false,
    ".git": false
  },
  "search.exclude": {
    "**/__pycache__": true,
    "**/node_modules": true,
    ".venv": true,
    "venv": true
  },
  "[json]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.formatOnSave": true
  },
  "files.watcherExclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/venv": true,
    "**/.venv": true
  }
}
